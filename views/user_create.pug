extends layout

block content

    h1 #{title}
    hr 
    if currentUser 
        h5 You are logged in as 
            a(href=currentUser.url) #{currentUser.username} 
            |    - Would you like to 
            a(href='/catalog/user/logout') log out?
        hr 

    form(method='POST' action='')
        div.form-group 
            label(for='first_name') First Name:
            input#first_name.form-control(type='text' name='first_name' value=(undefined===user ? '' : user.first_name))
        div.form-group 
            label(for='last_name') Last Name: 
            input#last_name.form-control(type='text' name='last_name' value=(undefined===user ? '' : user.last_name))
        div.form-group
            label(for='username') Username: 
            input#username.form-control(type='text' name='username' value=(undefined===user ? '' : user.username))
        div.form-group 
            label(for='password') Password: 
            input#password.form-control(type='password' name='password')
        button.btn.btn-primary(type='submit') Submit 

    if errors
        ul 
            for error in errors 
                li!= error.msg 
